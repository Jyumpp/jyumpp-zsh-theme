{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "console_title": true,
  "final_space": true,
  "transient_prompt": {
    "foreground_templates": [
      "{{ if gt .Code 0 }}#FF0000{{ else }}#43D426{{ end }}"
    ],
    "template": "$ "
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#FFFFFF",
          "style": "plain",
          "type": "os",
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} "
        },
        {
          "style": "diamond",
          "type": "session",
          "template": "{{ .UserName }}<#ffffff>@</><lightCyan>{{ .HostName }}</><white>:</>",
          "foreground": "lightYellow",
          "properties": {
            "host_color": "#26C6DA"
          }
        },
        {
          "foreground": "yellow",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " :({{.Ref}}){{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "branch_icon": ".",
          "type": "git"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "style": "short"
          },
          "template": "<b>{{ .Path }}</> "
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#6CA35E",
          "foreground": "#ffffff",
          "leading_diamond": "",
          "style": "diamond",
          "template": " {{ .Full }} ",
          "trailing_diamond": "",
          "type": "node"
        },
        {
          "foreground": "#0fc469",
          "style": "powerline",
          "type": "python",
          "display_mode": "environment",
          "template": "({{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }}{{ end }}{{ end }}) "
        },
        {
          "background": "#4c1f5e",
          "foreground": "#ffffff",
          "leading_diamond": " ",
          "style": "diamond",
          "template": " {{ .Full }} ",
          "trailing_diamond": "",
          "type": "java"
        },
        {
          "foreground": "#bab02a",
          "properties": {
            "threshold": 50
          },
          "style": "plain",
          "template": "took  {{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "type": "nix-shell",
          "style": "powerline",
          "foreground": "blue",
          "background": "transparent",
          "template": "({{ if eq .Type \"unknown\" }}{{ else }}nix shell: {{ .Type }}{{end}})"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground_templates": [
            "{{ if gt .Code 0 }}#FF0000{{ else }}#43D426{{ end }}"
          ],
          "style": "plain",
          "type": "text",
          "template": "$"
        }
      ],
      "type": "prompt"
    }
  ]
}
